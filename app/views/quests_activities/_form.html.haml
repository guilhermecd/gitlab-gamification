= form_for @quests_activity do |f|
  - if @quests_activity.errors.any?
    #error_explanation
      %h2= "#{pluralize(@quests_activity.errors.count, "error")} prohibited this quests_activity from being saved:"
      %ul
        - @quests_activity.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :descricao_tarefa
    = f.text_area :descricao_tarefa
  .field
    = f.label :quests_id
    = f.number_field :quests_id
  .field
    = f.label :qtd_pontos
    = f.number_field :qtd_pontos
  .field
    = f.label :parent_activity
    = f.text_field :parent_activity
  .field
    = f.label :target_type
    = f.text_field :target_type
  .field
    = f.label :action
    = f.number_field :action
  .field
    = f.label :label
    = f.text_field :label
  .actions
    = f.submit 'Save'
